<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>

    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Antlr4.Runtime.Standard" Version="4.9.2" />
    <PackageReference Include="NUnit" Version="3.12.0" />
    <PackageReference Include="NUnit3TestAdapter" Version="3.16.1" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.5.0" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="parsertest\*.sql">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="parsertest.failed\*.sql">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Scripts\*.sql">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\..\pggrammar.cs" Link="pggrammar.cs" />
    <Compile Include="..\..\pggrammarBaseListener.cs" Link="pggrammarBaseListener.cs" />
    <Compile Include="..\..\pggrammarListener.cs" Link="pggrammarListener.cs" />
    <Compile Include="..\..\pglexer.cs" Link="pglexer.cs" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="parsertest.failed\" />
    <Folder Include="parsertest\" />
  </ItemGroup>

</Project>
